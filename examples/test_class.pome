class Dog {
    fun init(name) {
        this.name = name;
        this.sound = "Woof";
    }

    fun speak() {
        print(this.name, "says", this.sound);
    }
    
    fun setSound(s) {
        this.sound = s;
    }
}

var d = Dog("Buddy");
d.speak(); // Buddy says Woof

d.setSound("Bark");
d.speak(); // Buddy says Bark

print("Dog name is:", d.name); // Access field

